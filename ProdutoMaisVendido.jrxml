	<queryString>
		<![CDATA[SELECT compra_historico_tb.contador, produto_tb.nome_produto, COUNT( nome_produto_id) AS numero_compras,
        	SUM(quantidadee) as total_item
                FROM compra_historico_tb
                LEFT JOIN cliente_tb
                ON compra_historico_tb.nome_cliente_id = cliente_tb.id_cliente
                LEFT JOIN produto_tb
                ON compra_historico_tb.nome_produto_id = produto_tb.id_produto
                LEFT JOIN usuario_tb
               	ON compra_historico_tb.usuario_id = usuario_tb.id_usuario
        		GROUP BY nome_produto,compra_historico_tb.contador
        		ORDER BY numero_compras DESC
        		LIMIT 100;]]>
	</queryString>
